@{
  ViewBag.Title = "Recover Password";
}
<!-- MAIN CONTENT -->
<section class="content">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
      <div id="recoverPassword" class="well no-padding">
        <form class="smart-form client-form" id="recoverPassword-form" novalidate="novalidate">
          <header>
            Recover Password
          </header>
          <fieldset>
            <img src="~/img/logo.png" class="img-responsive loginlogo" alt="IgnitionLogo" style="margin: 0 auto;">
            <section id="success-message-area" class="form-group alert alert-success alert-dismissable" style="display: none; margin-left:0; margin-top: 25px">
              <span>An email is sent with the password reset link.</span>
            </section>
            <section class="hideSection">
              <label class="label">Email</label>
              <label class="input">
                <i class="icon-append fa fa-envelope"></i>
                <input type="email" name="email" id="email" placeholder="Enter Email" data-bind="value:email" class="form-control"
                       required data-required-msg="Email is required" data-email-msg="Email format is not valid" />
              </label>
            </section>
            <section id="message-area" class="form-group alert alert-danger alert-dismissable hideSection" style="display: none; margin-left:0;">
              <span data-bind="text: message"></span>
            </section>
          </fieldset>
          <footer class="hideSection">
            <button id="login-btn" class="btn btn-primary ladda-button" data-style="expand-left" data-size="s" data-bind="click: recoverPassword" autofocus>
              <span class="fa fa-refresh"></span>
              <span class="ladda-label">&nbsp;&nbsp;Reset Password</span>
              <div class="ladda-progress" style="width: 104px;"></div>
            </button>&nbsp;&nbsp;
          </footer>
        </form>
      </div>
    </div>
  </div>
</section>
<script src="~/Scripts/app/account/recoverPassword.js"></script>