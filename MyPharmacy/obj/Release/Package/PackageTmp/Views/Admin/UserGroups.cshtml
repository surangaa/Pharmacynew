@using System.Text.RegularExpressions
@using FieldForce.Online.Core
@{
  ViewBag.Title = "User Groups";
}
<section>
  <h1>
    User Groups
  </h1>
</section>
<section class="content">
  <div id="manageGroups" class="row">
    <div class="col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <div id="groupGrid"></div>
          <div id="editorwindow"></div>
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/x-kendo-template" id="editor-template">
  <div id="editor">
    <div id="editorform">
      <div class="panel-group" id="accordion">
        <div class="panel panel-default" id="generalPanel">
          <div class="panel-heading">
            <h5 class="panel-title">
              <a data-toggle="collapse" data-target="\#general"
                 href="\#general">
                General
              </a>
            </h5>
          </div>
          <div id="general" class="panel-collapse collapse in">
            <div class="panel-body">
              <div class="row">
                <div class="col-xs-3">
                  <h5>Group Name:</h5>
                </div>
                <div class="col-xs-7">
                  @if (!User.IsInRole(GlobalConstants.ReadOnlyRole))
                  {
                    <input type="text" class="k-textbox" name="name" id="name" data-bind="value:name" required data-required-msg="Enter group name" data-available data-available-msg="Entered group name is not available" />
                    <span class="k-invalid-msg" data-for="name"></span>
                  }
                  else
                  {
                    <h5 data-bind="text: name"></h5>
                  }
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="panel panel-default" id="rolesPanel">
          <div class="panel-heading">
            <h5 class="panel-title">
              <a data-toggle="collapse" data-target="\#roles"
                 href="\#roles">
                Permissions
              </a>
            </h5>
          </div>
          <div id="roles" class="panel-collapse collapse in">
            <div class="panel-body">
              <div class="row">
                <div class="col-xs-3">
                  <h5>
                    Permissions:
                  </h5>
                </div>
                <div class="col-xs-7">
                  @if (!User.IsInRole(GlobalConstants.ReadOnlyRole))
                  {
                    <select data-role="multiselect"
                            data-placeholder="Type a Permission"
                            data-value-primitive="true"
                            data-text-field="Name"
                            data-value-field="Name"
                            class="textcontent"
                            data-bind="value: selectedRoles, source: roles"></select>
                  }
                  else
                  {
                    <h5 data-bind="text: groupRoles"></h5>
                  }

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br />
      <div class="k-state-default">
        @if (!User.IsInRole(GlobalConstants.ReadOnlyRole))
        {
          <button id="popup-save-button" data-bind="click: saveItem" class="k-button"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;Save</button>
        }
      <a href="\\#" id="popup-cancel-button" data-bind="click: cancel" class="k-button btn-transparent">@(!User.IsInRole(GlobalConstants.ReadOnlyRole) ? "Cancel" : "Close")</a>
    </div>
  </div>
</div>
</script>
<script type="text/x-kendo-template" id="gridtoolbar">
  <div class="toolbar">
    @if (!User.IsInRole(GlobalConstants.ReadOnlyRole))
    {
      <button class="k-button k-button-icontext" data-bind="click:createGroup"><span class="glyphicon glyphicon-plus-sign"></span>&nbsp;Create New User Group</button>
    }
  </div>
</script>
<script src="~/Scripts/app/admin/usergroups.js"></script>